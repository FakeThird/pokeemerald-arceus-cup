raw `
    ChampionsGauntlet_BattleRoom_MapScripts::
		map_script MAP_SCRIPT_ON_FRAME_TABLE, ChampionsGauntlet_BattleRoom_OnFrame
	    .byte 0

    ChampionsGauntlet_BattleRoom_OnFrame::
        map_script_2 VAR_TEMP_0, 0, ChampionsGauntlet_BattleRoom_EventScript_TournamentIntroOpen
        .2byte 0
    `
    
script ChampionsGauntlet_BattleRoom_EventScript_TournamentIntroOpen
{
    lock
    if(flag(FLAG_QUALIFIERS)){
        msgbox(ChampionsGauntlet_BattleRoom_Text_QualifierIntro, MSGBOX_DEFAULT)
	    closemessage    
    } 
    if(flag(FLAG_QUARTER_FINALS)){
        msgbox(ChampionsGauntlet_BattleRoom_Text_QuarterFinalsIntro, MSGBOX_DEFAULT)
	    closemessage    
    } 
    if(flag(FLAG_SEMI_FINALS)){
        msgbox(ChampionsGauntlet_BattleRoom_Text_SemiFinalsIntro, MSGBOX_DEFAULT)
	    closemessage    
    } 
    if(flag(FLAG_GRAND_FINALS)){
        msgbox(ChampionsGauntlet_BattleRoom_Text_GrandFinalsIntro, MSGBOX_DEFAULT)
	    closemessage    
    }
    goto(ChampionsGauntlet_BattleRoom_EventScript_ChampionsEnter)
}
	
script ChampionsGauntlet_BattleRoom_EventScript_ChampionsEnter
{
    msgbox(ChampionsGauntlet_BattleRoom_Text_PlayerIntro, MSGBOX_DEFAULT)
    closemessage  
    applymovement(LOCALID_PLAYER, ChampionsGauntlet_DomePreBattleRoom_Movement_PlayerWalkToPodium)
    waitmovement(0)
    msgbox(ChampionsGauntlet_BattleRoom_Text_PreRivalIntro, MSGBOX_DEFAULT)
    closemessage  
    call(ChampionsGauntlet_BattleRoom_RivalIntroAndEntrance)
    goto(ChampionsGauntlet_BattleRoom_EventScript_FightEnd)
}

script ChampionsGauntlet_BattleRoom_EventScript_FightEnd
{
    // Congrats for both and chuchu
    // msgbox(ChampionsGauntlet_BattleRoom_Text_PlayerIntro, MSGBOX_DEFAULT)
    // closemessage  

    if(flag(FLAG_GRAND_FINALS)){
        clearflag(FLAG_GRAND_FINALS)
        special(SetCB2WhiteOut)
    } 
    if(flag(FLAG_SEMI_FINALS)){
        clearflag(FLAG_SEMI_FINALS)
        setflag(FLAG_GRAND_FINALS) 
        warp(MAP_CHAMPIONS_GAUNTLET_DOME_PRE_BATTLE_ROOM, 5, 5)
    } 
    if(flag(FLAG_QUARTER_FINALS)){
        clearflag(FLAG_QUARTER_FINALS)
        setflag(FLAG_SEMI_FINALS)  
        warp(MAP_CHAMPIONS_GAUNTLET_DOME_PRE_BATTLE_ROOM, 5, 5)
    } 
    if(flag(FLAG_QUALIFIERS)){
        clearflag(FLAG_QUALIFIERS)
        setflag(FLAG_QUARTER_FINALS) 
        warp(MAP_CHAMPIONS_GAUNTLET_DOME_PRE_BATTLE_ROOM, 5, 5)
    }
    release
    end
}

